<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.todo.TodoActivity">

    <data>

        <variable
            name="item"
            type="com.hades.kotlintrainning.data.entity.Todo"/>

        <variable
            name="listener"
            type="com.hades.kotlintrainning.ui.todo.TodoActivity"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:onClick="@{() -> listener.onItemClick(item)}"
        android:layout_height="80dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_margin="2dp"
            android:id="@+id/image_todo_avatar"
            android:src="@mipmap/ic_launcher"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/image_todo_avatar"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="@{item.name}"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="@{item.description}"
                android:layout_height="wrap_content" />

        </LinearLayout>




    </RelativeLayout>

</layout>